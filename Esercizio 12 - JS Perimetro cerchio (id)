    <p>Il perimetro Ã¨: <span id="qui"></span></p>

    <script>
     var raggio = 3;
     const pigreco = 3.14;
          function perimetro() {
                              return 2 * pigreco * raggio;
           }
     document.getElementById("qui").innerHTML = perimetro() +  " cm";
    
    </script>
    
