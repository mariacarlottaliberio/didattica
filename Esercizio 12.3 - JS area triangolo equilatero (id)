    <hr>
    <p>L'area Ã¨: <span id="qui"></span></p>

    <script>
     var lato = 3;
     var radice = Math.sqrt(3)
    
          function area() {
                              return lato**2 * radice / 4;
           }
           
           document.getElementById("qui").innerHTML=area() + "cm";
    
    
    </script>
    
